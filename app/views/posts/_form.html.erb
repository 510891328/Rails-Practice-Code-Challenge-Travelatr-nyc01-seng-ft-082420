<%= form_for @post do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :blogger %><br>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name%>
  </div>
  <div class="field">
    <%= f.label :destination %><br>
    <%= f.collection_select :destination_id, Destination.all, :id, :name%>
  </div>
  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>
